#:import hex kivy.utils.get_color_from_hex

<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<MenuLabel@Label>:
    font_size: root.size[0]/11
<MenuButton@Button>:
    background_color: hex('#0f7272')
    background_normal: ''
    on_press:
        print("save all values in the view to a dictionary")
<LineDiv@BoxLayout>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint_y: None
    height: 1

<MainWid>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
<StartWid>:
    id: star_wid
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0] / 3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: hex('#0f7272')
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Acces Control"
            bold: True
            size_hint_x: .9

        FlatButton:
            text: "x"
            size_hint_x: .1
    BoxLayout:
        orientation: "vertical"
        padding: star_wid.space_x, 10
        # spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: root.size[0]/8
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: root.size[0]/18
                font_size: root.size[0]/50
            TextInput:
                id: username_field
                hint_text: "Username"
                size_hint_y: None
                height: root.size[0]/18
                font_size: root.size[0]/50
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                size_hint_y: None
                height: root.size[0]/18
                font_size: root.size[0]/50
                multiline: False
                password: True
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            size_hint_y: None
            # height: 40
            height: root.size[0]/18
            text: "Sign In"
            font_size: root.size[0]/50
            background_color: hex('#0f7272')
            background_normal: ''
            on_release:
                root.validate_user()
                root.create_database()
        Label:
            id: sp2

<DefaultWid>:
    id: default_wid
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0] / 3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: hex('#0f7272')
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Pesaje"
            bold: True
            size_hint_x: .9

        FlatButton:
            text: "x"
            size_hint_x: .1
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            id: menu_scroll
            canvas.before:
                Color:
                    rgba: hex('#0f7272')
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_x: None
            width: root.size[0]/5
            orientation: "vertical"
            Label:
