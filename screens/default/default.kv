#:import hex kivy.utils.get_color_from_hex

<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<MenuLabel@Label>:
    font_size: root.size[0]/11
<SideMenuButton@ToggleButton>:
    background_color: hex('#0f7272')
    background_normal: ''
    group: 'default_navs'
    on_state:
        print("save all values in the view to a dictionary")
    # on_press:
    #     print("save all values in the view to a dictionary")
<TopMenuButton@ToggleButton>:
    background_color: hex('#189ab4')
    background_normal: ''
    group: 'top_navs'
    on_state:
        print("save all values in the view to a dictionary")

<LineDiv@BoxLayout>:
    canvas.before:
        Color:
            rgba: hex('#ffffff')
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint_y: None
    height: 1

