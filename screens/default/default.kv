#:import hex kivy.utils.get_color_from_hex

<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<MenuLabel@Label>:
    font_size: root.size[0]/11
<MenuButton@Button>:
    background_color: hex('#0f7272')
    background_normal: ''
    on_press:
        print("save all values in the view to a dictionary")
<LineDiv@BoxLayout>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint_y: None
    height: 1
