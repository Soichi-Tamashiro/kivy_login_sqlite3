#:import hex kivy.utils.get_color_from_hex

<PesajeGeneralCuadroIndex@BoxLayout>:
    canvas.before:
        Color:
            rgba: hex('#398f8f')
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'

<PesajeGeneral>:
    orientation: 'vertical'
    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#05445e')
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: None
        height: root.height*0.05
        Label:
            text: 'Pesaje General de Vehiculo'
    TabbedPanel:
        canvas.before:
            Color:
                rgba: hex('#5aaead')
            Rectangle:
                size: self.size
                pos: self.pos
        do_default_tab: False
        tab_width: root.size[0]*.27
        TabbedPanelItem:
            text: 'Gestion Pesaje Vehiculo'
            background_color: hex('#0f7272')
            background_normal: ''
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: hex('#5aaead')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                orientation: 'vertical'
                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: hex('#99edec')
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    size_hint_y: .3
                    # height: root.size[0]/8
                    Label:
                        text:'Filtros'
                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: hex('#398f8f')
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    size_hint_y: .3
                    # height: root.size[0]/8
                    Label:
                        text:'Search'
                BoxLayout:
                    id: tabla_pesaje


                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: hex('#398f8f')
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    size_hint_y: .2
                    Label:
                        text: 'Cantidad de Registros: 0'
                BoxLayout:
                    size_hint_y: .3
                    Label:
                        text: 'botones'
        TabbedPanelItem:
            text: 'Gestion Consulta Vehiculo'
            background_color: hex('#0f7272')
            background_normal: ''
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: hex('#41d790')
                    Rectangle:
                        size: self.size
                        pos: self.pos
